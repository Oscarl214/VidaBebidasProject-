// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(uuid())
  name                String
  email               String    @unique
  phone               String?
  electronicSignature String?
  confirmWaiver       Boolean   @default(false)

  bookings            Booking[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@map("users")
}

model Booking {
  id            String   @id @default(uuid())

  // ğŸ“… Event timing
  eventDate     DateTime
  startTime     DateTime
  endTime       DateTime?

  // ğŸ§¾ Service details
  serviceType   String
  guestCount    Int?
  barType       String?
  message       String?

  // ğŸ“ Location
  venueName     String?
  venueType     String?
  address       String
  city          String?

  // ğŸ‘¤ Client info
  clientName    String
  clientEmail   String
  clientPhone   String?

  // ğŸ”” Workflow & automation
  status        BookingStatus @default(PENDING)
  depositPaid  Boolean       @default(false)
  reminderSent Boolean       @default(false)
  confirmedAt  DateTime?
  completedAt  DateTime?

  // ğŸ“ˆ Growth & attribution
  source        BookingSource?
  promoCampaign String?

  // ğŸ” Ownership
  userId        String
  user          User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ğŸ•’ Metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([eventDate])
  @@index([status])
  @@index([source])
  @@index([clientEmail])

  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELED
}


enum BookingSource {
  INSTAGRAM
  REFERRAL
  VENUE
  WEBSITE
  PROMOTION
}
